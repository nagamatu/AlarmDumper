<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<Button android:id="@+id/rtc"
         	android:textSize="10sp"
         	android:background="@drawable/popup_top_dark"
         	android:maxLines="1"
    		android:layout_weight="0.333"
    		android:gravity="center"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:text="@string/rtc" />
    	<Button android:id="@+id/rtc_wakeup"
         	android:textSize="10sp"
         	android:background="@drawable/popup_top_dark"
         	android:maxLines="1"
    		android:layout_weight="0.333"
    		android:gravity="center"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:text="@string/rtc_wakeup" />
    	<Button android:id="@+id/elapsed"
         	android:textSize="10sp"
         	android:background="@drawable/popup_top_dark"
         	android:maxLines="1"
    		android:layout_weight="0.333"
    		android:gravity="center"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:text="@string/elapsed" />
    </LinearLayout>
    <ImageView 
    	android:background="@drawable/popup_center_bright"
    	android:layout_width="fill_parent"
    	android:layout_height="2dp" />
    <ListView android:id="@id/android:list"
    	android:layout_weight="1"
    	android:background="@drawable/popup_bottom_dark"
    	android:layout_width="fill_parent"
    	android:layout_height="0dip" />
</LinearLayout>
